<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondo99"
    tools:context=".dinosaurios.DinoInfoActivity">

    <ImageView
        android:id="@+id/ivDino"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/tvNombreDino"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start|top"
        android:hint="Nombre"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/letra_normal_grande"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(TÃ³calo para escuchar su rujigo)"
        android:textColor="@android:color/black"/>

    <EditText
        android:id="@+id/etDescripcionDino"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start|top"
        android:background="@color/colorFondoTexto"
        android:textStyle="bold"
        android:text="@string/descripcion"
        android:inputType="textMultiLine"
        android:scrollbars="vertical"/>

</LinearLayout>