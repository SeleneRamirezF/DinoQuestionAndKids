<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".juego.JuegoActivity"
    android:orientation="vertical"
    android:background="@drawable/fondo4">

    <Button
        android:id="@+id/btnSonido"
        android:layout_width="@dimen/ancho_volumen"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_volumen_si" />

    <ImageView
        android:id="@+id/imagen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margen_superior_peque"
        android:src="@drawable/iguanodon"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <Button
            android:id="@+id/btnComenzarJuego"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/jugar"
            android:textSize="@dimen/letra_normal_peque"
            android:textColor="@android:color/white"
            android:background="@drawable/boton_redondo2"
            android:layout_marginTop="@dimen/margen_superior_mini"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margen_superior_normal"
        android:text="@string/recuerda_lo_aprendido"
        android:textSize="@dimen/letra_boton2"
        android:layout_gravity="center"
        android:textColor="@android:color/white"
        android:padding="@dimen/margen_mini"
        android:background="@drawable/boton_redondo"/>

</LinearLayout>