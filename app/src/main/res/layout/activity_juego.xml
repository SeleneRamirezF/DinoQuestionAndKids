<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".juego.JuegoActivity"
    android:orientation="vertical"
    android:background="@drawable/fondo4">

    <Button
        android:id="@+id/btnSonido"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_volumen_si" />

    <ImageView
        android:id="@+id/imagen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <Button
            android:id="@+id/btnComenzarJuego"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/jugar"
            android:textSize="20dp"
            android:textColor="@android:color/white"
            android:background="@drawable/boton_redondo2"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="@string/recuerda_lo_aprendido"
        android:textSize="17dp"
        android:layout_gravity="center"
        android:textColor="@android:color/white"
        android:padding="8dp"
        android:background="@drawable/boton_redondo2"/>

</LinearLayout>