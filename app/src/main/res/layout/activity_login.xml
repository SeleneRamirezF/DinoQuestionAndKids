<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/margen_interior_normal1"
    android:background="@drawable/fondo"
    tools:context=".inicio.LoginActivity">

    <EditText
        android:id="@+id/etCorreo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margen_superior_normal1"
        android:hint="@string/correo_hint"
        android:inputType="textEmailAddress"
        android:textColor="@android:color/black"
        android:textSize="@dimen/letra_boton"
        android:background="@color/colorFondoTexto"
        android:padding="@dimen/margen_interior_mini"/>

    <EditText
        android:id="@+id/etContrasena"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margen_superior_peque"
        android:hint="@string/contrasena_hint"
        android:inputType="textPassword"
        android:textColor="@android:color/black"
        android:textSize="@dimen/letra_boton"
        android:background="@color/colorFondoTexto"
        android:padding="@dimen/margen_interior_mini"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/inicio_sesion"
            android:layout_marginTop="@dimen/margen_superior_normal"
            android:background="@drawable/boton_redondo2"
            android:textColor="@android:color/white"
            android:textSize="@dimen/letra_boton1"/>
        <Button
            android:id="@+id/btnReestablecer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/olvido_contrasena"
            android:layout_marginBottom="@dimen/margen_inferior"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:textSize="@dimen/letra_boton1"
            android:background="@android:color/transparent"/>

    </LinearLayout>

</LinearLayout>