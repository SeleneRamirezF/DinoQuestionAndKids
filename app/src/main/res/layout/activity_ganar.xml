<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".juego.GanarActivity"
    android:background="@drawable/fondo4">
    <ImageView
        android:layout_width="@dimen/anchoYalto_copa"
        android:layout_height="@dimen/anchoYalto_copa"
        android:src="@drawable/copa"
        android:layout_marginTop="@dimen/margen_superior_grande2"
        android:layout_gravity="center_horizontal" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/has_ganado"
        android:textColor="@android:color/white"
        android:background="@drawable/boton_redondo2"
        android:paddingHorizontal="@dimen/margen_interior_horizontal"
        android:paddingVertical="@dimen/margen_interior_vertical"
        android:textSize="@dimen/letra_normal_grande"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:typeface="serif"/>
    </LinearLayout>
</LinearLayout>